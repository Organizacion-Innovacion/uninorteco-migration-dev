{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "checkJs": false,
    "allowJs": true,
    "declaration": true,
    "declarationMap": true,
  },
  "include": [
    "src",
    "tests"
  ],
}